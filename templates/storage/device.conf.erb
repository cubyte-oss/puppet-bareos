  Archive Device = <%= @archive_device %>
  LabelMedia = <%= @label_media ? 'yes' : 'no' %>;
  Random Access = <%= @random_access ? 'yes' : 'no' %>;
  AutomaticMount = <%= @auto_mount ? 'yes' : 'no' %>;
  RemovableMedia = <%= @removable_media ? 'yes' : 'no' %>;
  AlwaysOpen = <%= @always_open ? 'yes' : 'no' %>;
}
