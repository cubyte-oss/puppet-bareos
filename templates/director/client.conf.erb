Client {
  Name = "<%= @daemon_name %>"
  <%- if ! @enabled -%>
  Enabled = yes
  <%- end -%>
  Address = "<%= @address %>"
  <%- if scope['params::filedaemon_port'] != @port -%>
  FD Port = <%= @port %>
  <%- end -%>
  Password = "<%= @password %>"
  <%- if defined?(@catalog) -%>
  Catalog = "<%= @catalog %>"
  <%- end -%>
  <%- @options.each do |(name, value)| -%>
  <%= name %> = <%= value %>
  <%- end -%>
  <%- @includes.each do |include| -%>
  @"<%= include %>"
  <%- end -%>
}

