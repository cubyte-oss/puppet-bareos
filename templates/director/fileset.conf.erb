FileSet {
  Name = "<%= @fileset_name %>"
  <%- @options.each do |(name, value)| -%>
  <%= name %> = <%= value %>
  <%- end -%>
  <%- unless @includes.empty? and @include_plugins.empty? -%>
  Include {
    <%- unless @include_options.empty? -%>
    Options {
      <%- @include_options.each do |(name, value)| -%>
      <%- if value.is_a?(Array) -%>
      <%- value.each do |v| -%>
      <%= name %> = <%= v %>
      <%- end -%>
      <%- else -%>
      <%= name %> = <%= value %>
      <%- end -%>
      <%- end -%>
    }
    <%- end -%>
    <%- if @includes.kind_of?(Array) -%>
    <%- @includes.each do |rule| -%>
    File = "<%= rule %>"
    <%- end -%>
    <%- else -%>
    File = "<%= @includes %>"
    <%- end -%>
    <%- @include_plugins.each do |plugin| -%>
    Plugin = "<%= plugin %>"
    <%- end -%>
  }
  <%- end -%>
  <%- unless @excludes.empty? -%>
  Exclude {
    <%- unless @exclude_options.empty? -%>
    Options {
      <%- @excludes_options.each do |(name, value)| -%>
      <%- if value.is_a?(Array) -%>
      <%- value.each do |v| -%>
      <%= name %> = <%= v %>
      <%- end -%>
      <%- else -%>
      <%= name %> = <%= value %>
      <%- end -%>
      <%- end -%>
    }
    <%- end -%>
    <%- if @excludes.kind_of?(Array) -%>
    <%- @excludes.each do |rule| -%>
    File = "<%= rule %>"
    <%- end -%>
    <%- else -%>
    File = "<%= @excludes %>"
    <%- end -%>
  }
  <%- end -%>
  <%- @conf_includes.each do |include| -%>
  @"<%= include %>"
  <%- end -%>
}
