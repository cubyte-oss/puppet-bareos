Storage {
  Name = "<%= @storage_name %>"
  <%- if scope['bareos::params::storage_port'] != @port -%>
  SD Port = <%= @port %>
  <%- end -%>
  Plugin Directory = "<%= @plugins_dir %>"
  Plugin Names = "<%= @plugins.join(' ') %>"
  <%- @options.each do |(name, value)| -%>
  <%= name %> = <%= value %>
  <%- end -%>
}
