#
# Default Bareos Storage Daemon Configuration file
#
#  For Bareos release 14.2.1 (12 September 2014) -- debian Debian GNU/Linux 8.1 (jessie)
#
# You may need to change the name of your tape drive
#   on the "Archive Device" directive in the Device
#   resource.  If you change the Name and/or the
#   "Media Type" in the Device resource, please ensure
#   that dird.conf has corresponding changes.
#

Storage {                             # definition of myself
  Name = <%= @storage_name %>
  Maximum Concurrent Jobs = <%= @max_conc_jobs %>

  # remove comment from "Plugin Directory" to load plugins from specified directory.
  # if "Plugin Names" is defined, only the specified plugins will be loaded,
  # otherwise all storage plugins (*-sd.so) from the "Plugin Directory".
  #
  # Plugin Directory = /usr/lib/bareos/plugins
  # Plugin Names = ""
}

#
# List Directors who are permitted to contact Storage daemon
#
Director {
  Name = <%= @director_name %>
  Password = "<%= @director_password %>"
}

<%- if (@monitor_name && @monitor_password) -%>
#
# Restricted Director, used by tray-monitor to get the
#   status of the storage daemon
#
Director {
  Name = <%= @monitor_name %>
  Password = "<%= @monitor_password %>"
  Monitor = yes
}
<%- end -%>

#
# include additional configuration files, if required
#

# eg.
#@/etc/bareos/bareos-sd.d/device-gluster.conf


#
# Send all messages to the Director,
# mount messages also are sent to the email address
#
Messages {
  Name = Standard
  director = <%= @director_name %> = all
}

