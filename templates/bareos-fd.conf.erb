FileDaemon {
  Name = "<%= @daemon_name %>"
  <%- if scope['bareos::params::filedaemon_port'] != @port -%>
  FD Port = <%= @port %>
  <%- end -%>
  compatible = <%= @compatible ? 'yes' : 'no' %>
  Plugin Directory = "<%= @plugins_dir %>"
  <%- if @plugins.kind_of?(Array) -%>
  Plugin Names = "<%= @plugins.join(' ') %>"
  <%- end -%>
  <%- @options.each do |(name, value)| -%>
  <%= name %> = <%= value %>
  <%- end -%>
}

