Director {
  Name = "<%= @director_name %>"
  <%- if scope['params::director_port'] != @port -%>
  Dir Port = <%= @port %>
  <%- end -%>
  QueryFile = "<%= @query_file %>"
  Password = "<%= @director_password %>"
  <%- if (@load_backends) -%>
  Backend Directory = <%= @backend_dir %>
  <%- end -%>
  Plugin Directory = "<%= @plugins_dir %>"
  Plugin Names = "<%= @plugins.join(' ') %>"
  <%- @options.each do |(name, value)| -%>
  <%= name %> = <%= value %>
  <%- end -%>
}
